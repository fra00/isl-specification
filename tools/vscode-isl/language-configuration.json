{
  "comments": {
    "lineComment": "//",
    "blockComment": ["<!--", "-->"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "**", "close": "**" },
    { "open": "`", "close": "`" }
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["**", "**"],
    ["`", "`"]
  ],
  "folding": {
    "markers": {
      "start": "^#{1,4}\\s+",
      "end": "^#{1,4}\\s+"
    }
  }
}